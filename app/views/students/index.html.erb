<p style="color: green"><%= notice %></p>

<h1>Students</h1>

<% if current_teacher %>
  <% if current_teacher.teacher %>
    <%= link_to "New student", new_student_path %>
  <% end %>
<% end %>

<div id="students">
  <ul>
    <% @students.each do |student| %>
      <li>
        <% if current_teacher %>
          <% if current_teacher.teacher %>
            <%= link_to "詳細", student %>　
          <% end %>
        <% end %>
        <%= link_to student.name + "（" + student.affiliation + "-" + student.birthday.to_s + "）", words_path(student_id: student.id) %>
      </li>
    <% end %>
  </ul>
</div>

<% if current_teacher %>
  <% if current_teacher.teacher %>
    <%= link_to "New student", new_student_path %>
  <% end %>
<% end %>
